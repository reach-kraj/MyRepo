package predefinedjavaclass;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;

public class FileHandling {
	private static void Filecopy(File src, File dest) throws IOException {
        InputStream is = null;
        OutputStream os = null;
        try {
            is = new FileInputStream(src);
            os = new FileOutputStream(dest);

            // buffer size 1K
            byte[] buf = new byte[1024];

            int bytesRead;
            while ((bytesRead = is.read(buf)) > 0) {
                os.write(buf, 0, bytesRead);
            }
        } finally {
            is.close();
            os.close();
        }
    }
	public static void copyFile(File from, File to) throws IOException{
        Path src = Paths.get(from);
        Path dest = Paths.get(to);
       Files.copy(src, dest);
    }
	public static void main(String[] args) throws IOException {
		File srcFile=new File("G:\\Code\\");
		File dstFile=new File("C:\\temp\\");
//		FileHandling.Filecopy(srcFile, dstFile);
		FileHandling.copy(srcFile, dstFile);
		System.out.println("Copied Sucessfully");
	}
}
