package leetcode;

public class PrefixSort {

	public void longestCommonPrefix(String[] strs) { 
		String s1 = strs[0];
		String s2 = strs[strs.length-1];
		boolean check=false;
		int id = 0;
		while(id < s1.length() && id < s2.length()){
			if((s1.charAt(id) == s2.charAt(id))&&!check){
				id++;
				check=true;
			}
		}
		System.out.println(s1.substring(0, id));	
	}
	public static void main(String[] args) {
		String[] s1= {"flower","flow","flag"};

		PrefixSort s = new PrefixSort();
		s.longestCommonPrefix(s1);

	}
}
